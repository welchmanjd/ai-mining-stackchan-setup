<Application x:Class="AiStackchanSetup.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:AiStackchanSetup.Infrastructure"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converters:StepToVisibilityConverter x:Key="StepToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="44" />
            <Setter Property="Padding" Value="18,6" />
            <Setter Property="Background" Value="#1F6FEB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="MinWidth" Value="160" />
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="12,4" />
            <Setter Property="Background" Value="#E5E7EB" />
            <Setter Property="Foreground" Value="#111827" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style x:Key="SmallLinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#2563EB" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style TargetType="Expander">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#4B5563" />
        </Style>
    </Application.Resources>
</Application>
